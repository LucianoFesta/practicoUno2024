@{
    ViewData["Title"] = "Presupuestos";
}

<div class="d-flex justify-content-end">
    <button type="button" class="btn btn-success" onclick="listadoDePresupuestos()">Lista de Presupuestos</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCrearPresupuesto">Agregar Presupuesto</button>
</div>


<!-- Modal -->
<div class="modal fade" id="modalCrearPresupuesto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form>
            <input type="hidden" id="presupuestoID" value="0">

            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="nombre">
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción:</label>
                <input type="text" class="form-control" id="descripcion">
            </div>

            <div class="d-flex col-12 mb-3">
                <div class="col-6">
                    <label for="fechaInicio" class="form-label">Fecha Inicio:</label>
                    <input type="datetime-local" class="form-control" id="fechaInicio" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")">
                </div>
                <div class="col-6">
                    <label for="fechaFin" class="form-label">Fecha Fin:</label>
                    <input type="datetime-local" class="form-control" id="fechaFin" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")">
                </div>
            </div>

            <div class="d-flex col-12 mb-3">
                <div class="col-6">
                    <label for="importePresupuesto" class="form-label">Importe: </label>
                    <input type="number" class="form-control" id="importePresupuesto">
                </div>
                <div class="col-6">
                    <label for="fechaFin" class="form-label">Estado: </label>
                    @Html.DropDownList("Estado", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="guardarPresupuesto()">Guardar</button>
      </div>
    </div>
  </div>
</div>

<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Fecha de Inicio</th>
      <th scope="col">Fecha de Fin</th>
      <th scope="col">Importe</th>
      <th scope="col">Estado</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="tbodyPresupuestos"></tbody>
</table>

@section Scripts{
    <script src="~/js/presupuesto.js"></script>
}